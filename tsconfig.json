{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "i18n/*": [
        "src/i18n/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "app/*": [
        "src/app/*"
      ],
      "src/*": [
        "src/*"
      ],
      "*": [
        "*"
      ]
    },
    "jsx": "preserve",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "dom",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021",
      "esnext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "strictNullChecks": true
  },
  "include": [
    "./**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./.idea"
  ]
}
